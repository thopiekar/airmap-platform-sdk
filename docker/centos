FROM centos:7.6.1810

ARG CIRCLECI
ARG AIRMAP_CIRCLECI_API_KEY
ARG AIRMAP_CIRCLECI_CLIENT_ID
ARG AIRMAP_CIRCLECI_DEVICE_ID
ARG AIRMAP_CIRCLECI_USERNAME
ARG AIRMAP_CIRCLECI_PASSWORD

RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app
COPY . /usr/src/app

SHELL ["/bin/bash", "-c"]

RUN tools/centos/setup.dev.sh
ENV PATH="/usr/local/go/bin:/usr/local/cmake-3.14.4-Linux-x86_64/bin:${PATH}"
SHELL ["/usr/bin/scl", "enable", "devtoolset-7"]

RUN mkdir build
WORKDIR build
RUN cmake -DCMAKE_INSTALL_PREFIX=/usr/airmap -DAIRMAP_ENABLE_QT=ON ..
RUN make
# TODO: The following tests FAILED:
# 1 - examples-qt-client-test (Failed)
# 14 - acceptance.rule_sets (Failed)
# RUN ctest -V

RUN make install
WORKDIR /usr/src/app
RUN tools/centos/cleanup.dev.sh
WORKDIR /tmp
RUN rm -rf /usr/src/app

ENTRYPOINT ["/usr/airmap/bin/airmap", "daemon"]
